{
  "name": "starshell-extension-wallet",
  "displayName": "StarShell Wallet",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "description": "A privacy-preserving, free and open-source Web3 wallet built for the Secret Network and greater Cosmos ecosystem.",
  "license": "MIT",
  "author": {
    "name": "Blake Regalia",
    "email": "blake@starshell.net",
    "url": "https://blake-regalia.net/"
  },
  "contributors": [],
  "eslintIgnore": [
    "dist",
    "node_modules",
    "submodules",
    ".eslintrc.cjs",
    "comments.ts",
    "vite.config.ts"
  ],
  "scripts": {
    "lint": "eslint --ext .ts,.svelte .",
    "build": "yarn build:chrome",
    "build:chrome": "BROWSER=chrome vite build",
    "build:firefox": "BROWSER=firefox vite build",
    "build:safari": "BROWSER=safari vite build",
    "watch": "yarn watch:chrome",
    "watch:chrome": "BROWSER=chrome vite build --watch",
    "dev": "yarn dev:firefox",
    "dev:chrome": "yarn watch:chrome",
    "dev:firefox": "BROWSER=firefox vite",
    "dev:safari": "BROWSER=safari vite",
    "serve:chrome": "BROWSER=chrome web-ext run -t chromium --start-url \"https://google.com\" --source-dir ./dist/chrome",
    "serve:firefox": "BROWSER=firefox web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/firefox",
    "serve:firefox-android": "BROWSER=firefox web-ext run -t firefox-android --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/firefox",
    "host:page": "sirv local --dev --port=8188",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.49",
    "@tsconfig/svelte": "^3.0.0",
    "@types/chrome": "^0.0.190",
    "@types/crypto-js": "^4.1.1",
    "@types/estree": "^0.0.52",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "acorn-walk": "^8.2.0",
    "crypto-js": "^4.1.1",
    "eslint": "^8.18.0",
    "eslint-plugin-modules-newline": "^0.0.6",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "less": "^4.1.3",
    "rollup": "^2.75.7",
    "sirv": "^2.0.2",
    "svelte": "^3.48.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "web-ext": "^7.1.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.6.7",
    "@improbable-eng/grpc-web": "^0.15.0",
    "@noble/secp256k1": "^1.6.3",
    "@solar-republic/wasm-secp256k1": "^0.0.3-beta",
    "bech32": "^2.0.0",
    "bignumber.js": "^9.0.2",
    "fuse.js": "^6.6.2",
    "grpc-web": "^1.3.1",
    "javascript-time-ago": "^2.5.7",
    "noble-secp256k1": "^1.2.14",
    "qrcode-svg": "^1.1.0",
    "semver": "^7.3.7",
    "sha256-uint8array": "^0.10.3",
    "svelte-select": "^4.4.7",
    "svelte-tabs": "^1.1.0",
    "tiny-secp256k1": "^2.2.1",
    "webextension-polyfill": "^0.9.0"
  }
}
